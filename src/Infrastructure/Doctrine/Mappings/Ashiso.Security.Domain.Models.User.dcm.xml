<doctrine-mapping>
    <entity name="Ashiso\Security\Domain\Models\User" table="ashiso_user_users" repository-class="Ashiso\Security\Infrastructure\Doctrine\Repositories\UserRepository">

        <id name="id" column="id" type="string">
            <generator strategy="NONE" />
        </id>
        <field name="firstname" column="firstname" type="string" length="255" />
        <field name="lastname" column="lastname" type="string" length="255" />

    </entity>
</doctrine-mapping>
