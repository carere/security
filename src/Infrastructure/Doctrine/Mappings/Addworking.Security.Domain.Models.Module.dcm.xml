<doctrine-mapping>
    <entity name="Addworking\Security\Domain\Models\Module" table="addworking_security_modules" repository-class="Addworking\Security\Infrastructure\Doctrine\Repositories\ModuleRepository">

        <id name="id" column="id" type="guid">
            <generator strategy="NONE" />
        </id>

        <field name="name" column="name" type="string" length="255" />
        <field name="description" column="description" type="text" />

        <one-to-many field="childrens" target-entity="Addworking\Security\Domain\Models\Module" mapped-by="parent" index-by="id" />
        <many-to-one field="parent" target-entity="Addworking\Security\Domain\Models\Module" inversed-by="childrens">
            <join-column name="parent_id" referenced-column-name="id" />
        </many-to-one>

    </entity>
</doctrine-mapping>
