<doctrine-mapping>
    <entity name="Addworking\Domain\Models\Member" table="addworking_user_users" schema="public" repository-class="Addworking\Infrastructure\Doctrine\Repositories\MemberRepository">

        <id name="id" column="id" type="guid">
            <generator strategy="NONE" />
        </id>

        <many-to-one field="user" target-entity="User">
            <join-column name="user_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="enterprise" target-entity="Enterprise">
            <join-column name="enterprise_id" referenced-column-name="id" />
        </many-to-one>

        <unique-constraints>
            <unique-constraint columns="user,enterprise" name="unique_member" />
        </unique-constraints>

    </entity>
</doctrine-mapping>
